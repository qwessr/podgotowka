<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <com.example.uikit.edit_text.etDefault
            android:id="@+id/etDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.uikit.edit_text.etDefault
            android:id="@+id/etFilled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            app:layout_constraintTop_toBottomOf="@id/etDefault" />

        <com.example.uikit.edit_text.etDefault
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            app:layout_constraintTop_toBottomOf="@id/etFilled" />

        <com.example.uikit.edit_text.etDefault
            android:id="@+id/etError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            app:layout_constraintTop_toBottomOf="@id/etDescription" />



        <com.example.uikit.edit_text.EtPassword
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            app:layout_constraintTop_toBottomOf="@id/etError" />

        <com.example.uikit.edit_text.EtDate
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            app:layout_constraintTop_toBottomOf="@id/etPassword" />

        <select.CustomSelect
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            app:layout_constraintTop_toBottomOf="@+id/etDate"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bthShowDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:text="Демо"
                app:layout_constraintTop_toBottomOf="@+id/select"/>

        <com.example.uikit.edit_text.search.EtSearch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            app:layout_constraintTop_toBottomOf="@+id/bthShowDialog"
            app:layout_editor_absoluteX="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>