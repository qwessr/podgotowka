<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_hello" />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView1"
            style="@style/Typography.Matule.Title1.Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Создание Профиля" />


    </LinearLayout>
    
  

    <TextView
        android:id="@+id/textView2"
        style="@style/Typography.Matule.Caption.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Без профиля вы не сможете создавать проекты."
        android:textColor="@color/diskripchn"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
       />

    <TextView
        android:id="@+id/textView3"
        style="@style/Typography.Matule.Caption.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="В профиле будут храниться результаты проектов и ваши описания."

        android:textColor="@color/diskripchn"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        />



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        >

        <com.example.uikit.edit_text.etDefault
            android:id="@+id/etDefault1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
             />

        <com.example.uikit.edit_text.etDefault
            android:id="@+id/etDefault2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etDefault1" />

        <com.example.uikit.edit_text.etDefault
            android:id="@+id/etDefault3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etDefault2" />

        <com.example.uikit.edit_text.EtDate
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/etDefault3" />

        <select.CustomSelect
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etDate"  />

        <com.example.uikit.edit_text.etDefault
            android:id="@+id/etDefault4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etDate" />
    </LinearLayout>

    <com.example.uikit.edit_text.Button.BthBig
        android:id="@+id/etNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>