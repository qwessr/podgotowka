<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvLabelPass"
        style="@style/caption_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Пароль"
        android:visibility="visible"
        android:textColor="@color/diskripchn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_top_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/input_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_top_toBottomOf="@+id/tvLabelPass">

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvErrorPass"
        style="@style/caption_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/error"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_top_toBottomOf="@+id/tilPassword"
        tools:layout_editor_absoluteY="90dp"
        tools:text="Неверный пароль" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPasswordInput"
        style="@style/title2_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_selector"
        android:hint="**********"
        android:inputType="textPassword"
        android:padding="14dp"
        android:textColor="@color/black"
        android:textColorHint="@color/placeholder"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="27dp" />

</androidx.constraintlayout.widget.ConstraintLayout>